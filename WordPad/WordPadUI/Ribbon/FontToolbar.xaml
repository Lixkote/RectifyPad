                    <Button
                        Margin="0,12,2,0"
                        HorizontalAlignment="Stretch"
                        Click="ConfirmColor_Click"
                        Content="OK" Style="{StaticResource AccentButtonStyle}" />
                    <Button
                        Grid.Column="1"
                        Margin="2,12,0,0"
                        HorizontalAlignment="Stretch"
                        Click="CancelColor_Click"
                        Content="Cancel" />
                </Grid>
            </RelativePanel>
        </Flyout>
