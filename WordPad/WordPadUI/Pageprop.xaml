                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Margin="0,0,0,0" BorderBrush="{ThemeResource SystemChromeMediumColor}" BorderThickness="0,0,0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="42*"/>
                <RowDefinition Height="42*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <TextBlock Margin="0,16,0,7" Grid.Row="0" FontSize="14" Text="Paper" Grid.ColumnSpan="2" FontFamily="Segoe UI Variable Display Semibold" FontWeight="Bold" Height="20"/>
            <TextBlock Margin="0,16,0,7" Grid.Row="1" FontSize="14" Text="Size:" Grid.ColumnSpan="2" />
            <ComboBox x:Name="PaperTypeCombo" Grid.Column="1" SelectionChanged="PaperTypeCombo_SelectionChanged" HorizontalAlignment="Stretch" Margin="0,6,0,10" VerticalAlignment="Top" Grid.Row="1">
                <ComboBoxItem Content="A3"/>
                <ComboBoxItem Content="A4"/>
                <ComboBoxItem Content="B4 (JIS)"/>
                <ComboBoxItem Content="B5 (JIS)"/>
                <ComboBoxItem Content="Executive"/>
                <ComboBoxItem Content="Legal"/>
                <ComboBoxItem Content="Letter"/>
                <ComboBoxItem Content="Tabloid"/>
            </ComboBox>

        </Grid>
        <Grid x:Name="Orientcontainer" Grid.Row="2" BorderBrush="{ThemeResource SystemChromeMediumColor}" BorderThickness="0,0,0,1">
            <Grid.RowDefinitions>
                <RowDefinition>

                </RowDefinition>
                <RowDefinition>

                </RowDefinition>
                <RowDefinition>

                </RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="0,16,0,7" Grid.Row="0" FontSize="14" Text="Orientation" Grid.ColumnSpan="2" FontFamily="Segoe UI Variable Display Semibold" FontWeight="Bold"/>
            <RadioButton x:Name="orientationportait" Checked="orientationportait_Checked" Tag="Portrait" Content="Landscape" Grid.Row="2" Margin="0,3,0,10" />
            <RadioButton x:Name="orientationlandscape" Checked="orientationlandscape_Checked" Tag="Landscape" Content="Portrait" Grid.Row="1" Margin="0,3,0,1" />
        </Grid>
        <Grid Grid.Row="3" BorderBrush="{ThemeResource SystemChromeMediumColor}" BorderThickness="0,0,0,1">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*">

                </RowDefinition>
                <RowDefinition Height="Auto">

                </RowDefinition>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="42">

                </RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="112*"/>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="112*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="marginsname" Margin="0,16,0,7" Grid.Row="0" FontSize="14" Text="Margins (unitplaceholder)" Grid.ColumnSpan="2" FontFamily="Segoe UI Variable Display Semibold" FontWeight="Bold"/>
            <TextBox x:Name="RightMarginTextBox" Grid.Row="1" Grid.Column="3" Margin="0,0,0,10" Grid.RowSpan="2"/>
            <TextBox x:Name="BottomMarginTextBox" Grid.Row="3" Grid.Column="3" Margin="0,0,0,10"/>
            <TextBox x:Name="TopMarginTextBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>
            <TextBox x:Name="LeftMarginTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" Grid.RowSpan="2"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Left:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <TextBlock Grid.Row="2" Grid.Column="2" Text="Right:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Top:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <TextBlock Grid.Row="3" Grid.Column="2" Text="Bottom:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
        </Grid>
        <Grid Grid.Row="4">
            <CheckBox x:Name="printpagenumbers" Content="Print Page Numbers" Margin="0,10,0,0" />
        </Grid>
    </Grid>



</ContentDialog>