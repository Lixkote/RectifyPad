<ContentDialog
    x:Class="WordPad.WordPadUI.NoImplement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WordPad.WordPadUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Sorry, but RectifyPad cannot do that yet :C"
    SecondaryButtonText="Close"
    Style="{StaticResource DefaultContentDialogStyle}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel>
        <TextBlock Text="This feature/option is not yet implemented." />
        <TextBlock Text="If you want, you can help us implement it by doing a pull request." />
    </StackPanel>
</ContentDialog>
