                <Grid Margin="0,-8,0,4">
                    <controls:RangeSelector x:Name="RulerSlider"
                    Minimum="10"
                    Maximum="100"
                    StepFrequency="5" Width="{Binding ActualWidth,  ElementName=Editor, Mode=OneWay}"  VerticalAlignment="Stretch" />

                </Grid>
            </Border>

        </Grid>

        <Border
                BackgroundSizing="OuterBorderEdge"
                BorderBrush="{ThemeResource CardStrokeColorDefaultSolidBrush}"
                BorderThickness="0,1,0,0"
                Height="36"
                Grid.Row="5"
                Visibility="{x:Bind StatusbarToggle.IsChecked, Mode=OneWay}">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">


                <ComboBox  Margin="0,4,8,4"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Text="100%" IsEditable="True" Width="88"/>

                <Button Style="{StaticResource PaintUIButtonStyle}"
                        FontSize="14"
                        Margin="4"
                        Width="32"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="Zoom out">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="PageDown" Modifiers="Control" />
                    </Button.KeyboardAccelerators>
                    <Button.Content>
                        <Image x:Name="pastesimgfull" Width="16"
                               Height="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Source="{ThemeResource ResourceKey=ZoomOut}" Stretch="Fill" />
                    </Button.Content>
                </Button>

                <!--
                
                Did you ever notice that the slider's thumb in paint, is slightly clipped when the thumb is
                near the edge of the slider?
                
                yeah that happens here too, not sure why tho
                
                -->
                <Slider x:Name="ZoomSlider"
                        Value="100"
                        Minimum="10"
                        Maximum="500"
                        Width="130"
                        StepFrequency="1"
                        SmallChange="1"
                        LargeChange="4"
                        ValueChanged="ZoomSlider_ValueChanged">
                </Slider>

                <Button Style="{StaticResource PaintUIButtonStyle}"
                        FontSize="14"
                        
                        Margin="4"
                        Width="32"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="Zoom in">
                    <Button.Content>
                        <Image x:Name="zoomimgplys" Width="16"
                               Height="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Source="{ThemeResource ResourceKey=ZoomIn}" />
                    </Button.Content>
                </Button>

            </StackPanel>

        </Border>
        <TextBlock x:Name="BackTextColorMarker" HorizontalAlignment="Left" Margin="456,62,0,0" TextWrapping="Wrap" Text="&#xE8FE;" VerticalAlignment="Top" FontFamily="WordPad Fluent Icons" FontSize="20" Grid.Row="3" Foreground="#00000000"/>
        <TextBlock x:Name="FontColorMarker" HorizontalAlignment="Left" Margin="375,61,0,0" TextWrapping="Wrap" Text="&#xE8FC;" VerticalAlignment="Top" FontFamily="WordPad Fluent Icons" FontSize="20" Grid.Row="3" Foreground="#00000000"/>

    </Grid>
</Page>
