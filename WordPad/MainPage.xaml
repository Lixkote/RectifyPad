<Page x:Class="RectifyPad.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:RectifyPad"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      mc:Ignorable="d"
      muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
      xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="120" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar"
              Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image Source="/Assets/StoreLogo.png"
                   Width="16"
                   Height="16"
                   Grid.Column="1" />
            <TextBlock Text="{x:Bind FullString}"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       VerticalAlignment="Center"
                       Grid.Column="3"
                       x:Name="tea" />
        </Grid>

        <StackPanel x:Name="MenuStack"
                    Grid.Row="1"
                    Orientation="Horizontal">
            <muxc:MenuBar>
                <muxc:MenuBarItem Title="File">
                    <MenuFlyoutItem Text="New">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe8a5;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="N"
                                                 Modifiers="Control" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="Open"
                                    Click="Open_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe838;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="O"
                                                 Modifiers="Control" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSubItem Text="Recent">
                        <MenuFlyoutSubItem.Icon>
                            <FontIcon Glyph="&#xe823;" />
                        </MenuFlyoutSubItem.Icon>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutItem Text="Save">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe74e;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="S"
                                                 Modifiers="Control" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSubItem Text="Save as">
                        <MenuFlyoutSubItem.Icon>
                            <FontIcon Glyph="&#xe792;" />
                        </MenuFlyoutSubItem.Icon>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutSubItem Text="Print">
                        <MenuFlyoutSubItem.Icon>
                            <FontIcon Glyph="&#xe749;" />
                        </MenuFlyoutSubItem.Icon>
                        <MenuFlyoutItem Text="Print">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="P"
                                                     Modifiers="Control" />
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Page setup" />
                        <MenuFlyoutItem Text="Print preview" />
                    </MenuFlyoutSubItem>
                    <MenuFlyoutItem Text="Send">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe72d;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="About WordPad" Click="About_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe713;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </muxc:MenuBarItem>
                <muxc:MenuBarItem Title="View">
                    <MenuFlyoutItem Text="100%">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe9a6;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator />
                    <ToggleMenuFlyoutItem Text="Status bar"
                                          IsChecked="True"
                                          x:Name="StatusbarToggle" />
                </muxc:MenuBarItem>
            </muxc:MenuBar>
            <AppBarSeparator />
            <Button Style="{StaticResource MenuButton}"
                    ToolTipService.ToolTip="Save"
                    ToolTipService.Placement="Top"
                    Content="&#xe74e;" />
            <AppBarSeparator />
            <Button Style="{StaticResource MenuButton}"
                    ToolTipService.ToolTip="Undo"
                    ToolTipService.Placement="Top"
                    Content="&#xe7a7;"
                    Click="Undo_Click" />
            <Button Style="{StaticResource MenuButton}"
                    ToolTipService.ToolTip="Redo"
                    ToolTipService.Placement="Top"
                    Content="&#xe7a6;"
                    Click="Redo_Click" />
        </StackPanel>

        <Button Style="{StaticResource MenuButton}"
                Content="&#xed15;"
                ToolTipService.ToolTip="Send feedback"
                ToolTipService.Placement="Bottom"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Click="Feedback_Click" />

        <Grid Background="{ThemeResource RibbonBackground}"
              BorderBrush="{ThemeResource RibbonBorder}"
              BorderThickness="0,1"
              Padding="4"
              Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="137"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="0" />
            </Grid.ColumnDefinitions>

            <Grid BorderBrush="{ThemeResource RibbonColumnBorder}"
                  BorderThickness="0,0,1,0"
                  Padding="12">

                <Grid.RowDefinitions>
                    <RowDefinition Height="72" />
                    <RowDefinition Height="24" />
                </Grid.RowDefinitions>

                <Grid x:Name="ClipbrdHost"
                      ColumnSpacing="12">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <muxc:SplitButton Style="{StaticResource PaintUISplitButtonStyle}"
                                      Grid.RowSpan="2"
                                      Grid.Column="0"
                                      Click="Paste_Click">
                        <muxc:SplitButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="Paste">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xe77f;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Paste special">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xf0e3;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </muxc:SplitButton.Flyout>
                        <Image Width="24"
                               Height="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Source="/Assets/Icons/Light/Paste.svg" />
                    </muxc:SplitButton>

                    <Button Grid.Row="0"
                            Grid.Column="1"
                            Width="32"
                            Height="32"
                            Style="{StaticResource PaintUIButtonStyle}"
                            Click="Cut_Click">
                        <Image Width="16"
                               Height="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Source="/Assets/Icons/Light/Cut.svg" />
                    </Button>

                    <Button Style="{StaticResource PaintUIButtonStyle}"
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="32"
                            Height="32"
                            Click="Copy_Click">
                        <Image Width="16"
                               Height="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Source="/Assets/Icons/Light/Copy.svg" />
                    </Button>

                </Grid>

                <TextBlock Text="Clipboard"
                           Style="{StaticResource ColumnDescriptionTextblockStyle}"
                           Grid.Row="1" />

            </Grid>

            <Grid BorderBrush="{ThemeResource RibbonColumnBorder}"
                  BorderThickness="0,0,1,0"
                  Padding="12"
                  Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="72" />
                    <RowDefinition Height="24" />
                </Grid.RowDefinitions>

                <Grid ColumnSpacing="8">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition Width="77"/>
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>

                    <Button Style="{StaticResource PaintUIButtonStyle}"
                            Content="&#xe8d2;"
                            Width="32"
                            MinWidth="32"
                            MaxWidth="32"
                            Height="32"
                            Grid.Column="0"
                            Grid.Row="0"
                            Visibility="Collapsed"/>


                    <Button Style="{StaticResource PaintUIButtonStyle}"
                            Content="&#xe8e8;"
                            Width="32"
                            MinWidth="32"
                            MaxWidth="32"
                            Height="32"
                            Grid.Column="5"
                            Grid.Row="0"
                            FontSize="20"/>

                    <Button Style="{StaticResource PaintUIButtonStyle}"
                            Content="&#xe8e7;"
                            Width="32"
                            MinWidth="32"
                            MaxWidth="32"
                            Height="32"
                            Grid.Column="6"
                            Grid.Row="0"
                            FontSize="20"/>


                    <ToggleButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                  Content="&#xe8dd;"
                                  Width="32"
                                  Height="32"
                                  Grid.Column="0"
                                  Grid.Row="1">
                    </ToggleButton>


                    <ToggleButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                  Content="&#xe8db;"
                                  Width="32"
                                  Height="32"
                                  Grid.Column="1"
                                  Grid.Row="1">
                    </ToggleButton>


                    <ToggleButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                  Content="&#xe8dc;"
                                  Width="32"
                                  Height="32"
                                  Grid.Column="2"
                                  Grid.Row="1" Checked="ToggleButton_Checked">
                    </ToggleButton>


                    <ToggleButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                  Content="&#xede0;"
                                  Width="32"
                                  Height="32"
                                  Grid.Column="3"
                                  Grid.Row="1">
                    </ToggleButton>

                    <RadioButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                 Padding="0"
                                 Width="32"
                                 MinWidth="32"
                                 MaxWidth="32"
                                 Height="32"
                                 Grid.Column="4"
                                 Grid.Row="1"
                                 GroupName="SubSuper" Margin="2,0,0,0" Grid.ColumnSpan="2">
                        <Image Source="/WordPadUI/theme-light/Subscript.svg" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="None"  />
                    </RadioButton>

                    <RadioButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                 Padding="0"
                                 Width="32"
                                 MinWidth="32"
                                 MaxWidth="32"
                                 Height="32"
                                 Grid.Column="5"
                                 Grid.Row="1"
                                 GroupName="SubSuper" Margin="-40,0,0,0" Grid.ColumnSpan="2" >
                        <Image Source="/WordPadUI/theme-light/Superscript.svg" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="None"  />
                    </RadioButton>
                    <ComboBox x:Name="FontBox_Copy" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Stretch" IsEditable="True" PlaceholderText="Lucida Console"/>
                    <ComboBox x:Name="FontBox_Copy1" Grid.Column="4" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" IsEditable="True" PlaceholderText="14
                              " Margin="4,0,172,0"/>
                    <muxc:SplitButton Grid.Column="6" Content="" Margin="-38,0,0,0" Grid.Row="1" Width="77" FontFamily="Segoe Fluent Icons" VerticalContentAlignment="Stretch" FontSize="16"/>
                    <muxc:SplitButton Grid.Column="6" Content="" Margin="43,0,0,0" Grid.Row="1" Width="77" FontFamily="Segoe Fluent Icons" FontSize="16"/>

                </Grid>

                <TextBlock Text="Font"
                           Style="{StaticResource ColumnDescriptionTextblockStyle}"
                           Grid.Row="1" />

            </Grid>

            <Grid BorderBrush="{ThemeResource RibbonColumnBorder}"
                  BorderThickness="0,0,1,0"
                  Padding="12"
                  Grid.Column="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="72" />
                    <RowDefinition Height="24" />
                </Grid.RowDefinitions>

                <Grid ColumnSpacing="8">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <RadioButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                 Content="&#xe8e4;"
                                 Width="32"
                                 MinWidth="32"
                                 MaxWidth="32"
                                 Height="32"
                                 Grid.Column="0"
                                 Grid.Row="1"
                                 GroupName="Alignment" />

                    <RadioButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                 Content="&#xe8e3;"
                                 Width="32"
                                 MinWidth="32"
                                 MaxWidth="32"
                                 Height="32"
                                 Grid.Column="1"
                                 Grid.Row="1"
                                 GroupName="Alignment" />

                    <RadioButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                 Content="&#xe8e2;"
                                 Width="32"
                                 MinWidth="32"
                                 MaxWidth="32"
                                 Height="32"
                                 Grid.Column="2"
                                 Grid.Row="1"
                                 GroupName="Alignment" />

                    <RadioButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                 Content="&#xe700;"
                                 Width="32"
                                 MinWidth="32"
                                 MaxWidth="32"
                                 Height="32"
                                 Grid.Column="3"
                                 Grid.Row="1"
                                 GroupName="Alignment" />

                    <ToggleButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                 Width="32"
                                 MinWidth="32"
                                 MaxWidth="32"
                                 Height="32"
                                 Grid.Column="4"
                                 Grid.Row="1" Padding="0">
                        <Image Source="/WordPadUI/theme-light/Paragraph.svg" Width="16" Height="16" UseLayoutRounding="True" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="none"/>
                    </ToggleButton>
                    <muxc:SplitButton Grid.Column="2" Content="" Width="77" FontFamily="Segoe Fluent Icons" FontSize="16" Grid.ColumnSpan="3"/>
                    <muxc:SplitButton Grid.Column="4" Content="" Width="77" FontFamily="Segoe Fluent Icons" FontSize="16" Margin="2,0,0,0"/>
                    <RadioButton Style="{StaticResource PaintUIToggleButtonStyle}"
                        Content=""
                        Width="32"
                        MinWidth="32"
                        MaxWidth="32"
                        Height="32"
                        GroupName="Alignment" HorizontalAlignment="Center" />
                    <RadioButton Style="{StaticResource PaintUIToggleButtonStyle}"
                        Content=""
                        Width="32"
                        MinWidth="32"
                        MaxWidth="32"
                        Height="32"
                        Grid.Column="1"
                        GroupName="Alignment" HorizontalAlignment="Center" />

                </Grid>

                <TextBlock Text="Paragraph"
                           Style="{StaticResource ColumnDescriptionTextblockStyle}"
                           Grid.Row="1" />

            </Grid>

            <Grid BorderBrush="{ThemeResource RibbonColumnBorder}"
                  BorderThickness="0,0,1,0"
                  Padding="12"
                  Grid.Column="3">

                <Grid.RowDefinitions>
                    <RowDefinition Height="72" />
                    <RowDefinition Height="24" />
                </Grid.RowDefinitions>

                <Grid ColumnSpacing="8">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <muxc:SplitButton Style="{StaticResource PaintUISplitButtonStyle}"
                                      Grid.Column="0"
                                      >
                        <muxc:SplitButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="Picture">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xe91b;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Change picture">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xf0e3;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Resize picture">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xf0e3;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </muxc:SplitButton.Flyout>
                        <FontIcon FontSize="16" Glyph="&#xe8b9;"/>

                    </muxc:SplitButton>

                    <Button Style="{StaticResource PaintUIButtonStyle}"
                                 Content=""
                                 Width="32"
                                 MinWidth="32"
                                 MaxWidth="32"
                                 Height="32"
                                 Grid.Column="1"
                                 Grid.Row="1" VerticalAlignment="Top" Margin="0,10,0,0"
                                 />

                    <RadioButton Style="{StaticResource PaintUIToggleButtonStyle}"
                                 Width="32"
                                 MinWidth="32"
                                 MaxWidth="32"
                                 Height="32"
                                 Grid.Column="2"
                                 Grid.Row="1"
                                 GroupName="Alignment"
                                 Content="" VerticalAlignment="Top" Margin="0,10,0,0">

                    </RadioButton>


                </Grid>

                <TextBlock Text="Insert"
                           Style="{StaticResource ColumnDescriptionTextblockStyle}"
                           Grid.Row="1" />

            </Grid>
            <Grid BorderBrush="{ThemeResource RibbonColumnBorder}"
                BorderThickness="0,0,1,0"
                Padding="0,12,0,0"
                Grid.Column="4" Grid.ColumnSpan="2" Margin="4,0,0,5">

                <Grid.RowDefinitions>
                    <RowDefinition Height="72" />
                    <RowDefinition Height="24" />
                </Grid.RowDefinitions>

                <Grid ColumnSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32*"/>
                        <RowDefinition Height="32*"/>
                        <RowDefinition Height="32*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button Style="{StaticResource PaintUIButtonStyle}"
                Content=""
                Width="132"
                MinWidth="32"
                MaxWidth="32"
                Height="24"
                Grid.Row="1" HorizontalAlignment="Left" Click="Button_Click" />
                    <TextBlock HorizontalAlignment="Left" Margin="37,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Replace" VerticalAlignment="Center" FontFamily="Segoe UI Variable Display"/>
                    <TextBlock HorizontalAlignment="Left" Margin="37,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Select All" VerticalAlignment="Center" FontFamily="Segoe UI Variable Display"/>
                    <TextBlock HorizontalAlignment="Left" Margin="37,0,0,0" TextWrapping="Wrap" Text="Find" VerticalAlignment="Center" FontFamily="Segoe UI Variable Display"/>
 <Button Style="{StaticResource PaintUIButtonStyle}"
                Content="&#xE11A;"
                Width="132"
                MinWidth="32"
                MaxWidth="32"
                Height="24"
                Grid.Row="0" HorizontalAlignment="Left" Click="Button_Click" />
                    <Button Style="{StaticResource PaintUIButtonStyle}"
                Content=""
                Width="132"
                MinWidth="32"
                MaxWidth="32"
                Height="24"
                Grid.Row="2" HorizontalAlignment="Left" Click="Button_Click" />

                </Grid>

                <TextBlock Text="Editing"
                    Style="{StaticResource ColumnDescriptionTextblockStyle}"
                    Grid.Row="1" />

            </Grid>

        </Grid>

        <Grid x:Name="EditorContentHost"
              Background="{ThemeResource EditorContentHost}"
              Grid.Row="3"
              SizeChanged="EditorContentHost_SizeChanged">

            <Grid Background="White"
                  Width="816"
                  Margin="40,40,40,0"
                  Translation="0,0,16"
                  RequestedTheme="Light">
                <Grid.Shadow>
                    <ThemeShadow />
                </Grid.Shadow>
                <RichEditBox x:Name="Editor"
                             Style="{StaticResource MinEditStyle}" />
            </Grid>

        </Grid>

        <Border Background="{ThemeResource StatusBarBackground}"
                BackgroundSizing="OuterBorderEdge"
                BorderBrush="{ThemeResource StatusBarBorder}"
                BorderThickness="0,1,0,0"
                Height="32"
                Grid.Row="4"
                Visibility="{x:Bind StatusbarToggle.IsChecked, Mode=OneWay}">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <TextBlock Text="{x:Bind ZoomSlider.Value,Mode=OneWay}"
                           TextAlignment="Right"
                           Margin="0,0,8,0"
                           FontSize="12"
                           VerticalAlignment="Center">
                </TextBlock>

                <Button Style="{StaticResource PaintUIButtonStyle}"
                        FontSize="14"
                        Content=""
                        Margin="4"
                        Width="32"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="Zoom out">

                </Button>

                <!--
                
                Did you ever notice that the slider's thumb in paint, is slightly clipped when the thumb is
                near the edge of the slider?
                
                yeah that happens here too, not sure why tho
                
                -->
                <Slider x:Name="ZoomSlider"
                        Value="100"
                        Minimum="10"
                        Maximum="500"
                        Width="130"
                        StepFrequency="1"
                        SmallChange="1"
                        LargeChange="4"
                        ValueChanged="ZoomSlider_ValueChanged">
                </Slider>

                <Button Style="{StaticResource PaintUIButtonStyle}"
                        FontSize="14"
                        Content=""
                        Margin="4"
                        Width="32"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="Zoom in">

                </Button>

            </StackPanel>

        </Border>

    </Grid>
</Page>
